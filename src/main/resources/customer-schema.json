{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Customer",
  "description": "A customer record with their purchase history",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the customer"
    },
    "first_name": {
      "type": "string",
      "minLength": 1
    },
    "last_name": {
      "type": "string",
      "minLength": 1
    },
    "birthdate": {
      "type": "string",
      "format": "date-time",
      "description": "Customer's date and time of birth"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\d{3}-\\d{3}-\\d{5}$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the customer record was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the customer record was last updated"
    },
    "purchases": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Purchase"
      }
    }
  },
  "required": ["id", "first_name", "last_name", "birthdate", "phone", "created_at", "updated_at"],
  "definitions": {
    "Purchase": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "item": {
          "$ref": "#/definitions/Item"
        },
        "quantity": {
          "type": "integer",
          "minimum": 1
        },
        "ship_to": {
          "$ref": "#/definitions/Address"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the purchase was created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the purchase was last updated"
        }
      },
      "required": ["id", "item", "quantity", "ship_to", "created_at", "updated_at"]
    },
    "Item": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "minimum": 0
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the item was created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the item was last updated"
        }
      },
      "required": ["id", "name", "price", "created_at", "updated_at"]
    },
    "Address": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "street_line_one": {
          "type": "string",
          "minLength": 1
        },
        "street_line_two": {
          "type": "string"
        },
        "city": {
          "type": "string",
          "minLength": 1
        },
        "state": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "zip": {
          "type": "string",
          "pattern": "^\\d{5}(-\\d{4})?$"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the address was created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the address was last updated"
        }
      },
      "required": ["id", "street_line_one", "city", "state", "zip", "created_at", "updated_at"]
    }
  }
}